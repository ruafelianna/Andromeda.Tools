<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style Selector="TextBlock">
    <Setter Property="Padding" Value="10"/>

    <Style Selector="^.package, ^.count">
      <Setter Property="Foreground" Value="{DynamicResource TextControlPlaceholderForegroundDisabled}"/>
    </Style>
  </Style>

  <Style Selector="Button">
    <Setter Property="Padding" Value="10"/>
    <Setter Property="Cursor" Value="Hand"/>
  </Style>

  <Style Selector="ComboBox">
    <Setter Property="Margin" Value="10"/>
    <Setter Property="Width" Value="300"/>
    <Setter Property="PlaceholderForeground" Value="{DynamicResource TextControlPlaceholderForegroundDisabled}"/>

    <Style Selector="^ TextBlock">
      <Setter Property="Padding" Value="0"/>
    </Style>
  </Style>

  <Style Selector="TreeViewItem">
    <Setter Property="IsExpanded" Value="True"/>
  </Style>

  <Style Selector="TextBox">
    <Setter Property="Margin" Value="10"/>
    <Setter Property="Width" Value="300"/>

    <Style Selector="^ TextBlock">
      <Setter Property="Padding" Value="0"/>
    </Style>

    <Style Selector="^.folder">
      <Setter Property="Width" Value="400"/>
      <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
  </Style>

  <Style Selector="TabItem">
    <Setter Property="Cursor" Value="Hand"/>
  </Style>

</Styles>
